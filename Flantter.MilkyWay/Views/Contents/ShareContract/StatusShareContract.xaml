                    </PathIcon>
                </AppBarButton.Icon>
            </AppBarButton>
            <Button x:Name="ShareContract_TweetSmallButton" IsEnabled="{x:Bind ViewModel.Updating.Value,Mode=OneWay,Converter={StaticResource BooleanNegationConverter}}" Visibility="Collapsed" Background="{StaticResource AppBarTweetButtonBackgroundBrush}" Height="40" Width="60" VerticalAlignment="Bottom" BorderThickness="0" Padding="0" Margin="0,0,5,0" HorizontalAlignment="Right" Command="{x:Bind ViewModel.TweetCommand}">
                <PathIcon Foreground="{StaticResource AppBarTweetButtonForegroundBrush}" Data="M20.3599987030029,17.0200004577637L20.2982959747314,15.3165817260742 20.7248592376709,13.8618698120117 21.6109313964844,12.6718635559082 22.9277572631836,11.7625598907471 24.349178314209,11.3314666748047 25.7337284088135,11.3477125167847 27.0583534240723,11.8207426071167 28.2999992370605,12.7600002288818 31.2799987792969,11.6399993896484 30.5911140441895,13.0404796600342 29.2799987792969,14.1999998092651 31.9199981689453,13.5 29.5999984741211,15.8999996185303 29.3917999267578,18.8514404296875 28.6413745880127,21.4481601715088 27.5722007751465,23.5763988494873 25.5548362731934,26.1680793762207 23.3233985900879,27.9143581390381 20.9852809906006,29.036039352417 17.6354751586914,29.7396450042725 14.4869346618652,29.6789989471436 11.6279172897339,28.9678649902344 9.14667892456055,27.7199993133545 12.7489204406738,27.4371242523193 14.4411554336548,26.7908344268799 16.0533199310303,25.7733192443848 13.3364295959473,24.83811378479 11.7066783905029,22.5200004577637 13.7333202362061,22.4133186340332 12.1511697769165,21.7406959533691 11.0099296569824,20.7355556488037 10.3170547485352,19.4226360321045 10.0799999237061,17.8266792297363 12.1066799163818,18.3600006103516 10.8615303039551,17.0618438720703 10.2149152755737,15.5937051773071 10.1675119400024,13.9553833007813 10.7199993133545,12.1466808319092 12.8063335418701,14.1511659622192 15.1005001068115,15.6508445739746 17.6144161224365,16.616771697998 20.3599987030029,17.0200004577637z">
                    <PathIcon.RenderTransform>
                        <CompositeTransform ScaleX="1" ScaleY="1" TranslateX="-4" TranslateY="-5"/>
                    </PathIcon.RenderTransform>
                </PathIcon>
            </Button>

            <Grid x:Name="ShareContract_CommandGrid" Height="40" HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="ShareContract_CounterTextBlock" Grid.Column="4" Foreground="{StaticResource AppBarCharacterCountForegroundBrush}" Text="{x:Bind ViewModel.CharacterCount.Value, Mode=OneWay}" Width="40" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" FontSize="16" TextAlignment="Center" Margin="30,0"/>
                <Button Grid.Column="3" ToolTipService.Placement="Top" ToolTipService.ToolTip="{x:Bind ViewModel.Message.Value, Mode=OneWay}" Background="Transparent" Width="40" VerticalAlignment="Stretch" BorderThickness="0" Padding="0" Margin="3,0">
                    <Grid>
                        <SymbolIcon Visibility="{x:Bind ViewModel.Updating.Value, Mode=OneWay, Converter={StaticResource BooleanNegationToVisibilityConverter}}" Symbol="{x:Bind ViewModel.StateSymbol.Value, Mode=OneWay}"/>
                        <ProgressRing Visibility="{x:Bind ViewModel.Updating.Value, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" IsActive="True"/>
                    </Grid>
                    <Button.Flyout>
                        <Flyout>
                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{StaticResource AppBarMessageForegroundBrush}" Text="{x:Bind ViewModel.Message.Value, Mode=OneWay}"/>
                        </Flyout>
                    </Button.Flyout>
                </Button>
                <Button x:Uid="TweetArea_PictureButton" x:Name="ShareContract_SmallPictureButton" Grid.Column="1" IsEnabled="{x:Bind ViewModel.Updating.Value,Mode=OneWay,Converter={StaticResource BooleanNegationConverter}}" Visibility="Collapsed" Background="Transparent" Width="40" ToolTipService.Placement="Top" ToolTipService.ToolTip="画像の添付" VerticalAlignment="Stretch" BorderThickness="0" Padding="0" Margin="3,0">
                    <SymbolIcon Symbol="Pictures"/>
                    <Button.Flyout>
                        <Flyout>
                            <Grid Height="40">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <ItemsControl ItemsSource="{x:Bind ViewModel.Pictures}" VerticalAlignment="Center" Height="40">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="viewModels:PictureViewModel">
                                            <Button FlowDirection="LeftToRight" BorderThickness="0" Width="60" Height="40">
                                                <Image Source="{x:Bind Image.Value, Mode=OneWay}"/>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </Flyout>
                    </Button.Flyout>
                </Button>
                <ItemsControl x:Name="ShareContract_PictureItemsControl" Grid.Column="0" IsEnabled="{x:Bind ViewModel.Updating.Value,Mode=OneWay,Converter={StaticResource BooleanNegationConverter}}" ItemsSource="{x:Bind ViewModel.Pictures, Mode=OneWay}" VerticalAlignment="Center" Height="40">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="viewModels:PictureViewModel">
                            <Button FlowDirection="LeftToRight" BorderThickness="0" Width="60" Height="40">
                                <Image Source="{x:Bind Image.Value, Mode=OneWay}"/>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Grid>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="SizeStateGroup">
                <VisualState x:Name="Minimal">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="ShareContract_AccountButton.Width" Value="40"/>
                        <Setter Target="ShareContract_AccountButton.Height" Value="40"/>
                        <Setter Target="ShareContract_AccountButton.Margin" Value="5,0,0,0"/>
                        <Setter Target="ShareContract_AccountButton.VerticalAlignment" Value="Bottom"/>
                        <Setter Target="ShareContract_TextBox.Margin" Value="5,5,5,40"/>
                        <Setter Target="ShareContract_TweetButton.Visibility" Value="Collapsed"/>
                        <Setter Target="ShareContract_TweetSmallButton.Visibility" Value="Visible"/>
                        <Setter Target="ShareContract_CommandGrid.Margin" Value="50,0,72.5,0"/>
                        <Setter Target="ShareContract_CounterTextBlock.Margin" Value="0"/>
                        <Setter Target="ShareContract_PictureButton.Visibility" Value="Collapsed"/>
                        <Setter Target="ShareContract_PictureItemsControl.Visibility" Value="Collapsed"/>
                        <Setter Target="ShareContract_SmallPictureButton.Visibility" Value="Visible"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Min">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="384" />
                    </VisualState.StateTriggers>

                    <VisualState.Setters>
                        <Setter Target="ShareContract_AccountButton.Width" Value="40"/>
                        <Setter Target="ShareContract_AccountButton.Height" Value="40"/>
                        <Setter Target="ShareContract_AccountButton.Margin" Value="5,0,0,0"/>
                        <Setter Target="ShareContract_AccountButton.VerticalAlignment" Value="Bottom"/>
                        <Setter Target="ShareContract_TextBox.Margin" Value="5,5,5,40"/>
                        <Setter Target="ShareContract_TweetButton.Visibility" Value="Collapsed"/>
                        <Setter Target="ShareContract_TweetSmallButton.Visibility" Value="Visible"/>
                        <Setter Target="ShareContract_CommandGrid.Margin" Value="50,0,72.5,0"/>
                        <Setter Target="ShareContract_CounterTextBlock.Margin" Value="0"/>
                        <Setter Target="ShareContract_PictureButton.Visibility" Value="Collapsed"/>
                        <Setter Target="ShareContract_PictureItemsControl.Visibility" Value="Collapsed"/>
                        <Setter Target="ShareContract_SmallPictureButton.Visibility" Value="Visible"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Normal">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="500" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="ShareContract_AccountButton.Width" Value="40"/>
                        <Setter Target="ShareContract_AccountButton.Height" Value="40"/>
                        <Setter Target="ShareContract_AccountButton.Margin" Value="5,0,0,0"/>
                        <Setter Target="ShareContract_AccountButton.VerticalAlignment" Value="Bottom"/>
                        <Setter Target="ShareContract_TextBox.Margin" Value="5,5,5,40"/>
                        <Setter Target="ShareContract_TweetButton.Visibility" Value="Collapsed"/>
                        <Setter Target="ShareContract_TweetSmallButton.Visibility" Value="Visible"/>
                        <Setter Target="ShareContract_CommandGrid.Margin" Value="50,0,72.5,0"/>
                        <Setter Target="ShareContract_CounterTextBlock.Margin" Value="0"/>
                        <Setter Target="ShareContract_PictureButton.Visibility" Value="Visible"/>
                        <Setter Target="ShareContract_PictureItemsControl.Visibility" Value="Visible"/>
                        <Setter Target="ShareContract_SmallPictureButton.Visibility" Value="Collapsed"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Wide">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="700" />
                    </VisualState.StateTriggers>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</Page>
